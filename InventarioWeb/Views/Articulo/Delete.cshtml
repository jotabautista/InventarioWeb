<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3>Estás seguro que quieres eliminar este registro?</h3>
@using (Html.BeginForm("Delete", "Articulo"))
{
    @Html.ValidationSummary()
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdArticulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdArticulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Referencia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Referencia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Minimo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Minimo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Maximo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Maximo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    <input type="submit" value="Eliminar" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-table"></i> Atras</a>

}


